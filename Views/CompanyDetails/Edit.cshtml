@model ChainStoreSystem.ViewModel.CompanyViewModel.CompanyDetailViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Edit/CompanyDetail</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Library</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />
<table class="table">
    @using (Html.BeginForm("Edit", "CompanyDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <tr class="text-uppercase font-weight-bold" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
            <td>
                <label>
                    Name
                </label>
            </td>
            <td>
                <label>
                    Email
                </label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.CompanyName, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.CompanyEmail, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanyEmail, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr class="text-uppercase font-weight-bold" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
            <td>
                <label>
                    Logo
                </label>
            </td>
            <td>
                <label>
                    Address
                </label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.CompanyLogo, new { HtmlAttributes = new { @class = "form-control" } })
                <input type="hidden" asp-for="ExistingImage" />
                <img src="~/StoreImage/@Model.ExistingImage" alt="Alternate Text" style="height:100px;width:100px" />
                @Html.ValidationMessageFor(model => model.CompanyLogo, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.Address, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr class="text-uppercase font-weight-bold" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
            <td>
                <label>
                    Message
                </label>
            </td>
           
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.Message, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" class="btn btn-primary" />&nbsp;<a href="@Url.Action("Index","CompanyDetails") " class="btn btn-success">Back</a>
            </td>
        </tr>
    }
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
