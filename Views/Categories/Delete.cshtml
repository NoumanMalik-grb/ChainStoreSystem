@model ChainStoreSystem.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Delete/Cateory</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Library</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />

<table class="table table-responsive table-hover">
    <tr >
        <td>
            
            <h3 style="text-align:center; color:red">Are you sure you want to delete this?</h3>
        </td>
    </tr>
    <tr class="text-uppercase font-weight-bold" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
        <td>
            <label>
                Name
            </label>
        </td>
        <td>
            <label>
                Status
            </label>
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(model => model.CategoryStatus)
        </td>
    </tr>
    <tr>
        <td>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;<a href="@Url.Action("Index", "Categories")" class="btn btn-success">Back To</a>
                </div>
            }
        </td>
    </tr>
</table>

